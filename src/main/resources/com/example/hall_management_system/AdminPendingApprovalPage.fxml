<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>

<BorderPane prefHeight="505" prefWidth="700" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hall_management_system.AdminPendingApprovalPageController">

    <center>
        <TableView fx:id="pendingStudentTable">

            <columns>
                <TableColumn fx:id="rollCol" prefWidth="100" text="Roll" />
                <TableColumn fx:id="nameCol" prefWidth="300.0" text="Name" />
                <TableColumn fx:id="deptCol" prefWidth="220.0" text="Department" />
            </columns>

        </TableView>
    </center>

    <bottom>
        <StackPane prefHeight="50">
            <Button fx:id="viewStudentBtn" onMouseClicked="#viewStudent" text="View Student" />
        </StackPane>
    </bottom>

</BorderPane>
