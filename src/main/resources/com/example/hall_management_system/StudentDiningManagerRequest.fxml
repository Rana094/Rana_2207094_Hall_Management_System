<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefWidth="400" prefHeight="200"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.hall_management_system.StudentDiningManagerRequestController">

    <Label text="Dining Manager Application"
           layoutX="90" layoutY="30"
           style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <Button fx:id="requestBtn"
            text="Request for Dining Manager"
            layoutX="100" layoutY="80"
            onAction="#requestDiningManager"/>

    <Label fx:id="statusLabel"
           layoutX="80" layoutY="130"
           style="-fx-text-fill: green;" />

</AnchorPane>
