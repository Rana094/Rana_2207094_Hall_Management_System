<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hall_management_system.ChangePasswordController">
   <center>
      <AnchorPane fx:id="centerPane" prefHeight="504.0" prefWidth="642.0">
         <children>
            <StackPane layoutX="159.0" layoutY="28.0" prefHeight="114.0" prefWidth="309.0">
               <children>
                  <Label text="Change Your Password" />
               </children>
            </StackPane>
            <HBox layoutX="117.0" layoutY="160.0" prefHeight="79.0" prefWidth="393.0">
               <children>
                  <VBox prefHeight="191.0" prefWidth="221.0">
                     <children>
                        <Label prefHeight="26.0" prefWidth="152.0" text="Enter Your Current Password" />
                        <Label prefHeight="26.0" prefWidth="136.0" text="Enter Your New Password" />
                        <Label prefHeight="25.0" prefWidth="151.0" text="Confirm Your New Password" />
                     </children>
                  </VBox>
                  <VBox prefHeight="191.0" prefWidth="267.0">
                     <children>
                         <PasswordField fx:id="currentPasswordTxt" />
                         <PasswordField fx:id="newPasswordTxt" />
                         <PasswordField fx:id="confirmPasswordTxt" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Button fx:id="changePasswordBtn" layoutX="232.0" layoutY="278.0" mnemonicParsing="false" onMouseClicked="#changePassword" text="Click to change your password" />
         </children>
      </AnchorPane>
   </center>
</BorderPane>
