<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.hall_management_system.AdminViewHallBillsController"
            prefWidth="600" prefHeight="400">

    <center>
        <VBox spacing="15"
              alignment="TOP_LEFT"
              BorderPane.alignment="CENTER"
              style="-fx-padding: 20;">

            <Label text="Generated Hall Bills"
                   style="-fx-font-size: 20px; -fx-font-weight: bold;" />

            <TableView fx:id="billTable" prefHeight="280">
                <columns>
                    <TableColumn fx:id="monthCol" text="Month" prefWidth="200"/>
                    <TableColumn fx:id="amountCol" text="Amount" prefWidth="200"/>
                </columns>
            </TableView>

        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER"
              prefHeight="50"
              spacing="10">

            <Button text="Back"
                    onAction="#goBack"/>
        </HBox>
    </bottom>

</BorderPane>
