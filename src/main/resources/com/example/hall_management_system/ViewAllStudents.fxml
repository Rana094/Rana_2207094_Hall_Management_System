<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="504.0" prefWidth="642.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hall_management_system.ViewAllStudentsController">

    <center>
        <TableView fx:id="studentTable" prefHeight="439.0" prefWidth="750.0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

            <columns>
                <TableColumn fx:id="rollCol" prefWidth="60.0" text="Roll" />
                <TableColumn fx:id="nameCol" prefWidth="250.0" text="Name" />
                <TableColumn fx:id="deptCol" prefWidth="180.0" text="Department" />
                <TableColumn fx:id="hallDueCol" prefWidth="150" text="Total Hall Due" />

            </columns>

        </TableView>
    </center>

    <bottom>
        <HBox alignment="CENTER" prefHeight="50" spacing="15">
            <Button fx:id="deleteStudentBtn" onMouseClicked="#deleteStudent" text="Delete Student" />
            <Button fx:id="updateStudentBtn" onMouseClicked="#updateStudent" text="Update Student" />
        </HBox>
    </bottom>

</BorderPane>
